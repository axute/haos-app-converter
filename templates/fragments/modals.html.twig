<!-- Modal for Confirmations -->
<div class="modal fade" id="haConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow" style="border-radius: var(--border-radius);">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title" id="haConfirmTitle">Confirm Action</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4" id="haConfirmMessage">
                Are you sure?
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-ha-outline btn-sm px-3" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-ha-primary btn-sm px-4" id="haConfirmBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Alerts -->
<div class="modal fade" id="haAlertModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow" style="border-radius: var(--border-radius);">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title" id="haAlertTitle">Info</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4" id="haAlertMessage">
                Message...
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-ha-primary btn-sm px-4" data-bs-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for Logs -->
<div class="modal fade" id="haLogModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content border-0 shadow" style="border-radius: var(--border-radius);">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title"><span class="mdi mdi-text-long me-2"></span>Application Logs (Last 1000 lines)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-3">
                <div id="logContent">
                    <div class="d-flex justify-content-center p-4">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer border-0 pt-0">
                <button type="button" class="btn btn-ha-outline btn-sm px-3" 
                        hx-get="{{ basePath }}/fragments/logs" 
                        hx-target="#logContent"
                        hx-indicator="#log-refresh-spinner">
                    <span id="log-refresh-spinner" class="spinner-border spinner-border-sm me-1 htmx-indicator" role="status" style="display:none;"></span>
                    <span class="mdi mdi-refresh me-1"></span>Refresh
                </button>
                <button type="button" class="btn btn-ha-primary btn-sm px-4" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
