<!-- Upload App Modal -->
<div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content bg-ha-card text-ha-on-card">
            <div class="modal-header border-bottom-0">
                <h5 class="modal-title" id="uploadModalLabel">Upload App Zip</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="small text-muted mb-4">
                    The zip file should contain at least a <code>config.yaml</code>. 
                    The filename of the zip (without extension) will be used as the app slug.
                </p>
                <form id="uploadAppForm">
                    <div class="mb-3">
                        <label for="appZip" class="form-label">App Zip File</label>
                        <input class="form-control" type="file" id="appZip" name="app_zip" accept=".zip" required>
                    </div>
                </form>
                <div id="uploadProgress" class="progress mb-3 d-none">
                    <div class="progress-bar progress-bar-animated progress-bar-striped" role="progressbar" style="width: 100%"></div>
                </div>
            </div>
            <div class="modal-footer border-top-0">
                <button type="button" class="btn btn-ha-outline" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-ha-primary" onclick="uploadApp()">Upload</button>
            </div>
        </div>
    </div>
</div>
